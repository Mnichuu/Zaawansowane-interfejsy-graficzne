<UserControl x:Class="GameContainer.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameContainer"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <!-- Glowna struktura kontenera -->
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <!-- Mapa galaktyki -->
            <RowDefinition Height="1*" />
            <!-- Panel gracza -->
            <RowDefinition Height="1*" />
            <!-- Panel akcji -->
        </Grid.RowDefinitions>

        <!-- Sekcja mapy galaktyki -->
        <Border Grid.Row="0" Background="#1E1E2F" CornerRadius="10" Margin="10">
            <TextBlock Text="Mapa Galaktyki" Foreground="White" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>

        <!-- Sekcja panelu gracza -->
        <Border Grid.Row="1" Background="#2E2E3F" CornerRadius="10" Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Gracz: " Foreground="White" FontSize="16" />
                <TextBlock Text="TestPlayer" Foreground="LightBlue" FontSize="16" />
                <TextBlock Text=" | Kredyty: " Foreground="White" FontSize="16" Margin="10,0,0,0" />
                <TextBlock Text="1000" Foreground="LightGreen" FontSize="16" />
            </StackPanel>
        </Border>

        <!-- Sekcja panelu akcji -->
        <Border Grid.Row="2" Background="#3E3E4F" CornerRadius="10" Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Button Content="Buduj" Width="100" Height="40" Background="#4CAF50" Foreground="White" />
                <Button Content="Rozbuduj" Width="100" Height="40" Background="#2196F3" Foreground="White" />
                <Button Content="Przejdz Ture" Width="100" Height="40" Background="#FF5722" Foreground="White" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
