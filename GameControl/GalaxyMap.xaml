<UserControl x:Class="GameControl.GalaxyMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas Background="#1E1E2F">
        <!-- Układ planetarny 1 -->
        <Ellipse Width="20" Height="20" Fill="LightBlue" Canvas.Left="100" Canvas.Top="100" />
        <TextBlock Text="Układ 1" Foreground="White" Canvas.Left="125" Canvas.Top="100" />

        <!-- Układ planetarny 2 -->
        <Ellipse Width="20" Height="20" Fill="LightGreen" Canvas.Left="300" Canvas.Top="200" />
        <TextBlock Text="Układ 2" Foreground="White" Canvas.Left="325" Canvas.Top="200" />

        <!-- Trasa między układami -->
        <Line X1="110" Y1="110" X2="310" Y2="210" Stroke="Gray" StrokeThickness="2" />
    </Canvas>
</UserControl>
