<Window x:Class="ZIG04_syntezator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZIG04_syntezator"
        mc:Ignorable="d"
        Title="Syntezator Mowy" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Wybierz plik audio męski:" Margin="0,0,0,10"/>
            <ComboBox x:Name="VoiceComboBoxMale" Margin="0,0,0,10" />
            <Label Content="Wybierz plik audio damski:"  Margin="0,0,0,10"/>
            <ComboBox x:Name="VoiceComboBoxFemale" Margin="0,0,0,10" />
            <Button Content="Wczytaj plik" Margin="0,0,0,5" Click="LoadFile_Click"/>
            <Button Content="Start" Margin="0,0,0,5" Click="Start_Click"/>
            <Button Content="Pauza/Wznów" Margin="0,0,0,5" Click="PauseResume_Click"/>
            <TextBlock x:Name="StatusText" Text="Status: Oczekiwanie" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
